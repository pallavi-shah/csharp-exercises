@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1 style="font-family:'Book Antiqua'; font-size:x-large; font-weight:bold ">Add Cheese</h1>
<br />


<div style="width:300px">
    <form asp-controller="Cheese" asp-action="Add" method="post">
            <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name"  />
            <span asp-validation-for="Name"></span>
        </div>

        
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating"></label>
            <input class="form-control" asp-for="Rating" value=null />
            <span asp-validation-for="Rating"></span>
        </div>

        <div class="form-group">
            <label asp-for="Type"></label>
            <select asp-for="Type" asp-items="Model.CheeseTypes"></select>
        </div>

        <input type="submit" value="Add Cheese" />

    </form>
</div>
