@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1 style="font-family:'Book Antiqua'; font-size:x-large; font-weight:bold "    >Add Cheese</h1><br/>
 
                   <form asp-controller="Cheese" asp-action="Add" method="post">

                       <div class="form-group">
                           <label asp-for="Name"></label>
                           <input class="form-control" asp-for="Name" />
                           <span asp-validation-for="Name"></span>
                       </div>

                       <div class="form-group">
                           <label asp-for="Description"></label>
                           <input class="form-control" asp-for="Description" />
                           <span asp-validation-for="Description"></span>
                       </div>

                       <div class="form-group">
                               <label asp-for="Rating" ></label>
                               <input class="form-control" asp-for="Rating" value=null />
                               <span asp-validation-for="Rating"></span>
                       </div>

                       <input type="submit" value="Add Cheese" />

                   </form>

